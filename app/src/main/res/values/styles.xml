<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Button.Main" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/color_1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="iconTintMode">multiply</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="App.Text.Settings.Item" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>