<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/settings"
        app:titleTextColor="@color/color_1A1B22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_toolbar"
        android:orientation="vertical"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarSettings">

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:paddingEnd="6dp"
            android:text="@string/dark_theme"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textShareApp"
            style="@style/App.Text.Settings.Item"
            android:text="@string/share_app"
            app:drawableEndCompat="@drawable/ic_share" />

        <TextView
            android:id="@+id/textWriteSupport"
            style="@style/App.Text.Settings.Item"
            android:text="@string/write_support"
            app:drawableEndCompat="@drawable/ic_support" />

        <TextView
            android:id="@+id/textUserAgreement"
            style="@style/App.Text.Settings.Item"
            android:text="@string/user_agreement"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>