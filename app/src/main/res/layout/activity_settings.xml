<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/settings"
        app:titleTextColor="@color/colorTextToolbarSetting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_toolbar"
        android:orientation="vertical"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry">

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="@font/ys_display_medium"
            android:paddingEnd="6dp"
            android:text="@string/dark_theme"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml,VisualLintButtonSize"
            android:trackTint="@color/colorSwitch"
            android:thumbTint="@color/colorSwitchBackground"/>

        <Button
            android:id="@+id/buttonShareApp"
            style="@style/App.Button.Setting"
            android:text="@string/share_app"
            app:drawableEndCompat="@drawable/ic_share"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/buttonWriteSupport"
            style="@style/App.Button.Setting"
            android:text="@string/write_support"
            app:drawableEndCompat="@drawable/ic_support"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/buttonUserAgreement"
            style="@style/App.Button.Setting"
            android:text="@string/user_agreement"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</LinearLayout>