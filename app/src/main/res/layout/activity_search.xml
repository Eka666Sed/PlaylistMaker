<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.tracks.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/search"
        app:titleTextColor="@color/colorTextToolbarSearch" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_search_icon_search"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorInput"
            android:ems="10"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="48dp"
            android:padding="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHint" />

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_clear"
            tools:ignore="SpeakableTextPresentCheck" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout_last"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:gravity="center"
                    android:text="@string/hint"
                    android:textSize="19sp"
                    android:textColor="@color/colorText"
                    android:visibility="invisible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/track_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="invisible">

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/btn_clear_history"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="190dp"
                    android:background="@drawable/custom_support"
                    android:fontFamily="@font/ys_display_medium"
                    android:lineHeight="16dp"
                    android:padding="6dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/history_clear"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/no_content"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/blue"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="4dp"
                android:textColor="@color/colorText"
                android:visibility="invisible"
                tools:text="text_view" />

            <Button
                android:id="@+id/btn_message"
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:background="@drawable/custom_support"
                android:fontFamily="@font/ys_display_medium"
                android:lineHeight="16dp"
                android:padding="6dp"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>